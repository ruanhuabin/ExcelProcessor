from Tkinter import *
from tkFileDialog import askopenfilename
from tkFileDialog import askdirectory


class Application:
    def __init__(self, master):
        frame = Frame(master,width=400,height=600)
        frame.pack()

        
        self.logFilePath =StringVar()
        self.labelFolder = Label(frame,textvariable=self.logFilePath).grid(row=0,columnspan=2)
        
        self.log_file_btn = Button(frame, text="Select Screen File", command=self.selectLogFile,width=25, height=1).grid(row=1, columnspan=2)
        
        
        self.imageFilePath = StringVar()
        self.labelImageFile = Label(frame,textvariable = self.imageFilePath).grid(row = 2, columnspan = 2)
        self.image_folder_btn = Button(frame, text="Output Folder", command=self.selectImageFile,width=30).grid(row=3, columnspan=2)
        
        self.blankText = StringVar()
        self.blankLabel = Label(frame,textvariable = self.blankText).grid(row = 4, columnspan = 2)

        
        self.output_filename_label = Label(frame, text="Output File Name").grid(row=5)
        self.output_filename_entry = Entry(frame, bd = 4).grid(row=5, column=1)
        
#         self.image_folder_btn = Button(frame, text="Select Image Folder", command=self.selectImageFile,width=25).grid(row=1)
#         self.quite_button = Button(frame, text="QUIT", fg="red", command=frame.quit,width=25).grid(row=5)
#  
#         
#         self.imageFilePath = StringVar()
#         #self.labelFolder = Label(frame,textvariable=self.logFilePath).grid(row=0,column=1)
#         self.labelImageFile = Label(frame,textvariable = self.imageFilePath).grid(row = 1,column=1)

    def selectLogFile(self):
        filename = askopenfilename()
        self.logFilePath.set(filename)

    def selectImageFile(self):
        imageFolder = askdirectory()
        self.imageFilePath.set(imageFolder)

mainFrame = Tk()
mainFrame.title("Screen Data Processor")
mainFrame.geometry("400x600")
#mainFrame.resizable(False, False)
app = Application(mainFrame)
mainFrame.mainloop()
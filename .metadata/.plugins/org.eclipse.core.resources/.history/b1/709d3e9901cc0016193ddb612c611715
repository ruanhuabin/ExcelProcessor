import glob
def getFileList(path):
    
    finalPath = path + "./*.jpg"
    fileList = glob.glob(finalPath)
    
    return fileList
if __name__ == '__main__':
    fileList = getFileList("F:\\DCIM\\Camera")
    print("fileList = " + str(fileList))
    print("size = " + str(len(fileList)))
    pass